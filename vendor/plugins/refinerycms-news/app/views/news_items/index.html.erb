
<% content_for :body_content_right do %>

  <% if @news_items.any? %>

    <% @news_items.each do |item| %>
      <h2><%= link_to item.title, news_item_url(item) %></h2>
   
        <small>Published <%= item.publish_date.strftime("%A %d of %B, %Y") %></small>
   
      <%= truncate(item.body, :length => 150, :omission => " ... #{link_to "Read more", news_item_url(item)}", :preserve_html_tags => true) %>
    <% end %>
    <%= will_paginate(@news_items) %>
  <% else %>
    <p><em>Sorry we haven't posted up any news yet.</em></p>
  <% end %>


<% end %>

<div id="body_content_left">
	<div id='bg_image' class='clearfix'><img src="http://wyli.co.uk/agents/temple.jpg" /></div>
	</div>
	
<%= render :partial => "/shared/content_page" %>
